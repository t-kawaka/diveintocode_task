
<br><br><br>
<%= form_with(model: @comment, local: true) do |form| %>
  <% if @comment.errors.any? %>
    <div id="error_explanation">
      <% @comment.errors.full_messages.each do |msg| %>
        <%= msg %>
      <% end %>
    </div>
  <div class="field">
    <%= form.text_area :content, class: "comment_input" %>
  </div>

  <div class="actions">
    <%= form.submit %>
  </div>
<% end %>
